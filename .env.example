# Database
DATABASE_URL="postgresql://user:password@localhost:5432/chambers?schema=public"

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-min-32-chars-long-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars-long-change-in-production"

# JWT Expiry
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# Encryption (for additional security layers)
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Email (for verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@chambers-app.com

# File Storage (for credential uploads)
S3_BUCKET=chambers-verifications
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info
